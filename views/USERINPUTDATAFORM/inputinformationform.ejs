    <link rel="stylesheet" type="text/css" href="http://localhost:3000/stylesheets/style.css">
</head>

<body>

    <div class="container">

        <nav class="container navbar navbar-expand-lg navbar-light fixed-top"
            style="background-color: rgba(255, 255, 255, 0.884);">
            <a class="navbar-brand" href="/"><img src="http://localhost:3000/images/logo.png" style="width: 100px;height: auto;"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
    </div>





    <div id="app1">
        <section id="page-2" style="font-size: 0.9em;">
            <div class="container">
                <h1 style="text-align: center;"><b>นายปรัชญา ประภาวัต(แปง)</b></h1>
                <div class="row ">
                    <div class="col">

                        <h3 class="headcolor">#INFORMATION</h3>

                        <div>
                            <input v-model="newData.information">
                            <button @click="addEmp">savedata</button>
                            <ul>
                                <li v-for="emp in allInformation.empGroup">
                                    <p>
                                        <svg viewBox="0 0 16 16" width="1em" height="1em" focusable="false" role="img"
                                            alt="icon" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                                            class="bi-chevron-double-right b-icon bi">
                                            <g>
                                                <path fill-rule="evenodd"
                                                    d="M3.646 1.646a.5.5 0 01.708 0l6 6a.5.5 0 010 .708l-6 6a.5.5 0 01-.708-.708L9.293 8 3.646 2.354a.5.5 0 010-.708z"
                                                    clip-rule="evenodd"></path>
                                                <path fill-rule="evenodd"
                                                    d="M7.646 1.646a.5.5 0 01.708 0l6 6a.5.5 0 010 .708l-6 6a.5.5 0 01-.708-.708L13.293 8 7.646 2.354a.5.5 0 010-.708z"
                                                    clip-rule="evenodd"></path>
                                            </g>
                                        </svg>
                                        <button type="button" class="close" v-on:click="deleteComment(emp)">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        {{emp.information}} ได้เงินเดือน

                                    </p>

                                </li>
                            </ul>
                        </div>

                        <div class="education mt-5">
                            <h3 class="headcolor">#EDUCATION</h3>
                            <div>
                                <input v-model="newData.education">
                                <button @click="addeducation">savedata</button>
                                <ul>
                                    <li v-for="emp in allInformation.educationGroup">
                                        <p>
                                            <svg viewBox="0 0 16 16" width="1em" height="1em" focusable="false"
                                                role="img" alt="icon" xmlns="http://www.w3.org/2000/svg"
                                                fill="currentColor" class="bi-chevron-double-right b-icon bi">
                                                <g>
                                                    <path fill-rule="evenodd"
                                                        d="M3.646 1.646a.5.5 0 01.708 0l6 6a.5.5 0 010 .708l-6 6a.5.5 0 01-.708-.708L9.293 8 3.646 2.354a.5.5 0 010-.708z"
                                                        clip-rule="evenodd"></path>
                                                    <path fill-rule="evenodd"
                                                        d="M7.646 1.646a.5.5 0 01.708 0l6 6a.5.5 0 010 .708l-6 6a.5.5 0 01-.708-.708L13.293 8 7.646 2.354a.5.5 0 010-.708z"
                                                        clip-rule="evenodd"></path>
                                                </g>
                                            </svg>
                                            {{emp.education}} ได้เงินเดือน
                                        </p>
                                        <button type="button" class="close" v-on:click="deleteEducation(emp)">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>





                    <div class="col-md-6">
                        <section>
                            <div class="activity mt-5">
                                <h3 class="headcolor">#ACTIVITIES</h3>

                                <!-- ----------------------------------------------------- -->
                                <div>
                                    <input v-model="newData.activity">
                                    <button @click="addActivity">savedata</button>
                                    <ul>

                                        <li v-for="emp in allInformation.activityGroup">
                                            <p>
                                                <svg viewBox="0 0 16 16" width="1em" height="1em" focusable="false"
                                                    role="img" alt="icon" xmlns="http://www.w3.org/2000/svg"
                                                    fill="currentColor" class="bi-chevron-double-right b-icon bi">
                                                    <g>
                                                        <path fill-rule="evenodd"
                                                            d="M3.646 1.646a.5.5 0 01.708 0l6 6a.5.5 0 010 .708l-6 6a.5.5 0 01-.708-.708L9.293 8 3.646 2.354a.5.5 0 010-.708z"
                                                            clip-rule="evenodd"></path>
                                                        <path fill-rule="evenodd"
                                                            d="M7.646 1.646a.5.5 0 01.708 0l6 6a.5.5 0 010 .708l-6 6a.5.5 0 01-.708-.708L13.293 8 7.646 2.354a.5.5 0 010-.708z"
                                                            clip-rule="evenodd"></path>
                                                    </g>
                                                </svg>
                                                {{emp.activity}}
                                            </p>
                                            <button type="button" class="close" v-on:click="deleteActivity(emp)">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                                <!-- ----------------------------------------------------- -->
                            </div>
                        </section>
                    </div>
                    <button type="submit" @click="addUser()">Submit all</button>
                </div>
            </div>
            <%= user._id%>
        </section>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.22/dist/vue.js "></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.15.2/axios.js"></script>
    <script>

        var app = new Vue({
            el: "#app1",
            data: {
                newData: {
                    information: '',
                    education: "",
                    activity: ""

                },
                allInformation: {

                    empGroup: [
                        {
                            information: "เรียน it ",
                        },
                    ],

                    activityGroup: [
                        {
                            activity: "เล่นเกม",
                        },
                    ],
                    educationGroup: [
                        {
                            education: "ปี 3 สจล.",
                        },
                    ],

                    // ----------------------------------------
                }

            },
            methods: {
                addUser() {
                    console.log(this.empGroup)
                    this.submitting = true;
                    axios.post('/portfolio/addInputInformation', {
                   
                        userInformation: this.allInformation,
                        userId:      "<%= user._id%>",
                        projectName: "<%= projectName%>"
                    }, {
                        headers: {

                        }
                    })
                        .then((response) => {
                            window.location.href = 'http://localhost:3000/portfolio/chooseSectionEdit/<%= projectName%>'
                            console.log(user._id );
                            console.log(projectName);
                        });
                },
                addEmp: function () {
                    this.allInformation.empGroup.push({
                        information: this.newData.information,
                    });
                    this.newData.information = "";
                },
                addeducation: function () {
                    this.allInformation.educationGroup.push({
                        education: this.newData.education,
                    });
                    this.newData.education = "";
                },
                addActivity: function () {
                    this.allInformation.activityGroup.push({
                        activity: this.newData.activity,
                    });
                    console.log(this.newData.activity)
                    this.newData.activity = "";
                },

                deleteComment(txt) {
                    console.log(txt)
                    let index = this.allInformation.empGroup.indexOf(txt)
                    this.allInformation.empGroup.splice(index, 1)
                },
                deleteActivity(txt) {
                    console.log(txt)
                    let index = this.allInformation.activityGroup.indexOf(txt)
                    this.allInformation.activityGroup.splice(index, 1)
                },
                deleteEducation(txt) {
                    console.log(txt)
                    let index = this.allInformation.educationGroup.indexOf(txt)
                    this.allInformation.educationGroup.splice(index, 1)
                },


            },



        });
    </script>















